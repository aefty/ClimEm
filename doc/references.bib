mendeley-groups = {Clima{\_}Proj},
number = {1},
publisher = {Progress in Earth and Planetary Science},
title = {{A review of progress towards understanding the transient global mean surface temperature response to radiative perturbation}},
url = {http://dx.doi.org/10.1186/s40645-016-0096-3},
volume = {3},
year = {2016}
