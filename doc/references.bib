doi = {10.1002/jame.20038},
file = {:Users/alexmalova/Dropbox/Climate{\_}Lit./Climate Science/Giorgetta{\_}et{\_}al-2016-Journal{\_}of{\_}Advances{\_}in{\_}Modeling{\_}Earth{\_}Systems.pdf:pdf},
journal = {Journal of Advances in Modeling Earth Systems},
mendeley-groups = {Clima{\_}Proj},
